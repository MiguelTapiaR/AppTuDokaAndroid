<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity"
    android:orientation="vertical">

    <TextView
        android:text="¡Nos da gusto que estés aquí!"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView4" android:textColor="#3F51B5"
        android:textSize="24sp" android:textStyle="bold" android:autoText="false" android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent" android:textAlignment="center"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:text="¿Que reporte deseas hacer?"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView5" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:textAlignment="center"
        android:textColor="#3F51B5" android:textSize="22sp" app:layout_constraintTop_toBottomOf="@+id/textView4"/>

    <Button
        android:id="@+id/reporte_envio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#D6D7D7"
        android:text="Reporte de envío"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#004a8e"
        android:textSize="18sp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:layout_marginRight="70dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="30dp" />

    <Button
        android:id="@+id/reporte_devolucion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#D6D7D7"
        android:text="Reporte de devolución"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#004a8e"
        android:textSize="18sp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:layout_marginRight="70dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="30dp"/>
    <Button
        android:id="@+id/reporte_dano"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#D6D7D7"
        android:text="Reporte de daño"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#004a8e"
        android:textSize="18sp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:layout_marginRight="70dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="30dp"/>
    <Button
        android:id="@+id/reporte_obra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#D6D7D7"
        android:text="Reporte de obra"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#004a8e"
        android:textSize="18sp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:layout_marginRight="70dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="30dp" />




    <Button
        android:id="@+id/logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#D6D7D7"
        android:text="Cerrar sesión"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#004a8e"
        android:textSize="18sp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:layout_marginRight="70dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="30dp" />

</LinearLayout>
