<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Números de devolución"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/azul"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Escribe el número de devolución y da click en Agregar"
        android:textColor="@color/azul"
        android:textSize="18dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        />
    <EditText
        android:id="@+id/et_numero_remision"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Número de devolución..."
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        />
    <Button
        android:id="@+id/btn_agregar_numero_remision"
        android:text="Agregar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:background="@color/azul"
        android:textColor="@color/blanco"
        android:layout_marginTop="20dp"
        />
    <ListView
        android:id="@+id/lista_numeros_remision"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"

        />
    <Button
        android:id="@+id/btn_finalizar_reporte"
        android:text="Continuar "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:background="@color/azul"
        android:textColor="@color/blanco"
        android:layout_marginTop="20dp"
        />
        </LinearLayout>
    </ScrollView>
</LinearLayout>